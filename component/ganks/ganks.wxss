/* component/ganks/ganks.wxss */

.gank-list {
  display: flex;
  flex-direction: column;
  padding: 10rpx 16rpx;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.card {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 100%;
  border-radius: 6rpx;
  margin: 10rpx 0;
  padding: 10rpx 16rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 6rpx 2rpx #ddd;
}

.title {
  color: #222;
  font-size: 28rpx;
}

.date {
  text-align: end;
  color: #757575;
  font-size: 24rpx;
  margin-top: 16rpx;
}

.loading {
  color: #bdbdbd;
  font-size: 24rpx;
  padding: 10rpx 0;
}
